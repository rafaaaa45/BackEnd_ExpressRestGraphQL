{
  "swagger": "2.0",
  "info": {
    "title": "TP2 IS",
    "description": "Projeto de IS, backend em express + mongodb(rest e graphql)",
    "version": "1.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],

  "parameters": {
    "email": {
      "name": "email",
      "description": "email para autenticação",
      "required": true,
      "in": "header",
      "default": "admin@admin"
    },
    "password": {
      "name": "password",
      "description": "password para autenticação",
      "required": true,
      "in": "header",
      "default": "12456"
    }
  },

  "paths": {
    "/api/users": {
      "get": {
        "description": "Obtem uma lista de utilizadores",
        "parameters": [
          {
            "$ref": "#/parameters/email"
          },
          {
            "$ref": "#/parameters/password"
          }
        ],
        "responses": {
          "200": {
            "description": "Este endpoint retorna a lista de users por defeito"
          }
        }
      },
      "post": {
        "description": "Permite inserir um novo utilizador",
        "parameters": [
          {
            "$ref": "#/parameters/email"
          },
          {
            "$ref": "#/parameters/password"
          },
          {
            "name": "user-details",
            "description": "Detalhes do novo utilizador",
            "in": "body",
            "schema": {
              "type": "object",
              "required": ["email", "password", "name"],
              "properties": {
                "email": {
                  "type": "string",
                  "description": "Email do novo utilizador",
                  "default": "test@mail.com"
                },
                "password": {
                  "type": "string",
                  "format": "password",
                  "description": "Password do novo utilizador",
                  "default": "123456"
                },
                "name": {
                  "type": "string",
                  "description": "Nome do novo utilizador",
                  "default": "Test"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Se for possível inserir o utilizador"
          },
          "400": {
            "description": "Se o utilizador já existir"
          }
        }
      }
    },

    "/api/tags": {
      "get": {
        "description": "Obtem uma lista com todas as tags",
        "responses": {
          "200": {
            "description": "Este endpoint retorna a lista de tags por defeito"
          }
        }
      }
    }
  }
}
